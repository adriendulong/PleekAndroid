<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:clickable="true">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshSwipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.goandup.lib.widget.ListViewScrollingOff
            android:id="@+id/listViewPiki"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:background="@color/piki_bg"
            android:divider="@color/transparent"
            android:fadingEdgeLength="0px"
            android:scrollbars="none"
            android:listSelector="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/layoutNoPleeks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/piki_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/picto_no_pleeks" />

        <com.goandup.lib.widget.TextViewFont
            android:id="@+id/txtNoPleeks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            app:customFont="banzaibros.otf"
            android:text="@string/home_search_no_pleeks"
            android:gravity="center"
            android:textColor="@color/no_piki_grey"
            android:rotation="-1"
            android:layout_marginTop="27dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutNoUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/piki_bg"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/picto_no_user" />

        <com.goandup.lib.widget.TextViewFont
            android:id="@+id/txtNoUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            app:customFont="banzaibros.otf"
            android:text="@string/home_search_no_user"
            android:gravity="center"
            android:textColor="@color/no_piki_grey"
            android:rotation="-1"
            android:layout_marginTop="27dp" />
    </LinearLayout>
</RelativeLayout>
