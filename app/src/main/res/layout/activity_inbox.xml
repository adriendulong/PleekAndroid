<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/firstColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="22dp"
            android:paddingRight="22dp">
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/picto_logo_home"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/imgSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/picto_settings"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/imgFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:scaleType="center"
                android:src="@drawable/picto_friends_home_sel"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <!-- PAGER TAB -->
    <RelativeLayout
        android:id="@+id/pagerTabLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/firstColor"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/btnTab1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgInbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/picto_inbox"
                    android:layout_centerVertical="true"
                    android:alpha="0" />

                <ImageView
                    android:id="@+id/imgInboxSel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/picto_inbox_sel"
                    android:layout_centerVertical="true" />

                <com.goandup.lib.widget.TextViewFont
                    android:id="@+id/txtInbox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12dp"
                    app:customFont="montserrat-regular.ttf"
                    android:text="@string/home_inbox"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/blanc"
                    android:layout_toRightOf="@id/imgInboxSel" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnTab2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgSent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/picto_sent"
                    android:layout_centerVertical="true"
                    android:alpha="1" />

                <ImageView
                    android:id="@+id/imgSentSel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/picto_sent_sel"
                    android:layout_centerVertical="true"
                    android:alpha="0" />

                <com.goandup.lib.widget.TextViewFont
                    android:id="@+id/txtSent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12dp"
                    app:customFont="montserrat-regular.ttf"
                    android:text="@string/home_sent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/blanc"
                    android:layout_toRightOf="@id/imgSentSel" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnTab3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgBest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/picto_best"
                    android:layout_centerVertical="true"
                    android:alpha="1" />

                <ImageView
                    android:id="@+id/imgBestSel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/picto_best_sel"
                    android:layout_centerVertical="true"
                    android:alpha="0" />

                <com.goandup.lib.widget.TextViewFont
                    android:id="@+id/txtBest"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12dp"
                    app:customFont="montserrat-regular.ttf"
                    android:text="@string/home_best"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/blanc"
                    android:layout_toRightOf="@id/imgBestSel" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:background="@drawable/ind_best_new"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/txtBest" />

            </RelativeLayout>
        </LinearLayout>

        <com.viewpagerindicator.UnderlinePageIndicator
            android:id="@+id/tabIndicator"
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            style="@style/CustomUnderlinePageIndicator" />
    </RelativeLayout>

    <!-- CONTENT -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pagerTabLayout">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/shadow_bot" />

    </RelativeLayout>
</RelativeLayout>
