<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/noir">

    <ImageView
        android:id="@+id/imgPiki"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.goandup.lib.widget.TextViewFont
        android:id="@+id/txtNbFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:textSize="20dp"
        app:customFont="proximanova_sbold.otf"
        android:layout_alignParentBottom="true"
        android:textColor="@color/blanc"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:shadowColor="@color/noir"
        android:padding="15dp"/>

    <com.goandup.lib.widget.TextViewFont
        android:id="@+id/txtTroisPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:textSize="40dp"
        app:customFont="proximanova_sbold.otf"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:shadowColor="@color/noir"
        android:textColor="@color/blanc"
        android:padding="15dp"/>

</RelativeLayout>

