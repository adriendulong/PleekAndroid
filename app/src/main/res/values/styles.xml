<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="DialogLoaderAnimation">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@anim/dialog_loader_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_loader_exit</item>
    </style>

    <style name="CustomUnderlinePageIndicator">
        <item name="selectedColor">@color/secondColor</item>
    </style>

</resources>
